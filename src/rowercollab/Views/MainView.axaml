                    <controls:ColorZone Background="#164B72" Height="180">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Svg Path="avares://rowercollab/Assets/Rower_Logo_Gold_blue.svg" Stretch="Uniform" Height="120" />
                        </StackPanel>
                    </controls:ColorZone>
