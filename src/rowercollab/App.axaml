<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             xmlns:icon="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:local="using:rowercollab"
             x:Class="rowercollab.App"
             RequestedThemeVariant="Default">
    <Application.Resources>
        <FontFamily x:Key="NunitoFont">Assets/Fonts/Nunito.ttf</FontFamily>
        <FontFamily x:Key="VarelaRound">Assets/Fonts/VarelaRound.ttf</FontFamily>
        <FontFamily x:Key="HaginCaps">Assets/Fonts/HaginCapsMedium.ttf</FontFamily>
    </Application.Resources>
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    <Application.Styles>
        <icon:MaterialIconStyles />
        <themes:MaterialTheme BaseTheme="Light" PrimaryColor="Grey" SecondaryColor="LightBlue" />
    </Application.Styles>
</Application>